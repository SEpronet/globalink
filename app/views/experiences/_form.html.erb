<%= form_for(experience) do |f| %>
  <% if experience.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(experience.errors.count, "error") %> prohibited this experience from being saved:</h2>

      <ul>
      <% experience.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "container">
    <div class="field">
      <%= f.label :company_name, class: 'label' %>
      <%= f.text_field :company_name %>
    </div>

    <div class="field">
      <%= f.label :title, class: 'label' %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :location, class: 'label' %>
      <%= f.text_field :location %>
    </div>

    <label class="label">Duration</label>

    <div class = "row">
      <div class="field col s6">
        <%= f.label :from %>
        <%= f.text_field :from, class: 'datepicker hoverable' %>
      </div>

      <div class="field col s6">
        <%= f.label :to %>
        <%= f.text_field :to, class: 'datepicker hoverable' %>
      </div>
    </div>
    <script>
      $( '.datepicker' ).pickadate({

          onOpen: function() { $('pre').css('overflow', 'hidden') },
          onClose: function() { $('pre').css('overflow', '') }
      })
    </script>

    <div class="field">
      <%= f.label :description, class: 'label' %>
      <%= f.text_area :description, id: "textarea1", class: "materialize-textarea" %>
    </div>

    <div class="actions">
      <center><%= button_tag type: 'submit', class: "waves-effect waves-light btn hoverable" do %>
            <i class="fa fa-check" aria-hidden="true"></i> Save
        <% end %>
    </div>
  </div>
<% end %>
